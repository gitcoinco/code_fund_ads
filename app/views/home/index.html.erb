        </div>
        <!-- End Facts & Figures -->
      </div>

      <div class="col-sm-4 col-lg-3 mb-7 mb-sm-0">
        <!-- Facts & Figures -->
        <div class="text-center">
          <div class="position-relative">
            <div class="u-indicator-dots">
              <h4 class="display-4 text-primary mb-0">
                $6,153
              </h4>
            </div>
          </div>
          <p class="mb-0">publisher<br>distributions</p>
        </div>
        <!-- End Facts & Figures -->
      </div>

      <div class="col-sm-4 col-lg-3 mb-7 mb-sm-0">
        <!-- Facts & Figures -->
        <div class="text-center">
          <div class="position-relative">
              <h4 class="display-4 text-primary mb-0">
                0.24%
              </h4>
          </div>
          <p class="mb-0">average paid<br>click through rate</p>
        </div>
      </div>
    </div>
    <!-- End Facts & Figures -->
  </div>
  <!-- End Facts & Figures Section -->

