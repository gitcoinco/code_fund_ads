<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/properties", class: "active" %>
<% end %>

<% content_for :actions do %>
  <ul class="nav flex-nowrap" style="justify-content: flex-end;">
    <li><%= render "/@shared/date_range_picker" %></li>
    <li class="ml-1"><%= render "/@shared/actions/add_property" %></li>
  </ul>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Properties",
    subtitle: "#{pluralize(@pagy.count, "record")} found",
    icon: "fas fa-browser" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render partial: "/property_searches/form",
               layout: "/@shared/collapsable_search_form",
               locals: { search: @property_search } %>
    <div class="bg-white p-4">
      <%= render "/properties/table", properties: @properties, pagy: @pagy %>
    </div>
  </div>
</main>
