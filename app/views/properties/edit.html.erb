<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/properties" %>
  <%= render "/@shared/breadcrumbs/property", property: @property %>
  <%= render "/@shared/breadcrumbs/edit_property", property: @property, class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/show_property", property: @property %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Editing", "Property",
    subtitle: @property.scoped_name,
    icon: "fas fa-browser" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render "/properties/form", property: @property %>
  </div>
</main>