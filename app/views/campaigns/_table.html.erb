<div class="table-responsive">
  <table class="js-datatable table table-borderless u-datatable u-datatable__striped u-datatable__trigger">
    <thead>
      <tr class="border-bottom">
        <%= sortable_tr "name" %>
        <%= sortable_tr "user.first_name", "Advertiser" %>
        <%= sortable_tr "end_date", "Expires" %>
        <%= sortable_tr "total_budget_cents", "Budget" %>
        <%= sortable_tr "status" %>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="font-size-1">
      <%= render partial: "/campaigns/tr", collection: campaigns, as: :campaign %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
    <span><%== pagy_nav_bootstrap(pagy) if pagy.pages > 1 %></span>
    <%= pagy_entries(pagy) %>
  </div>
</div>
