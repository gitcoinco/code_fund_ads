<div class="table-responsive">
  <table class="table table-borderless u-datatable u-datatable__striped">
    <thead>
      <tr class="border-bottom">
        <th scope="col">Name</th>
        <th scope="col">Advertiser</th>
        <th scope="col">Headline</th>
        <th scope="col">Campaigns</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "/creatives/tr", collection: creatives, as: :creative %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
    <span><%== pagy_nav_bootstrap(pagy) if pagy.pages > 1 %></span>
    <%= pagy_entries(pagy) %>
  </div>
</div>
