<%= form_tag nil,
      data: {controller: "dashboard-date-range", target: "dashboard-date-range.form"},
      method: :get, autocomplete: "off", class: "ml-3",
      style: "width: 200px;" do %>
  <div class="w-auto input-group input-group-sm" style="height: 40px;">
    <div class="input-group-prepend">
      <span class="input-group-text border-0 text-primary">
        <span class="fas fa-calendar"></span>
      </span>
    </div>
    <input type="text"
      name="date_range"
      class="js-range-datepicker form-control border-0 text-primary"
      data-target="dashboard-date-range.datePicker"
      data-start-date="<%= @start_date.to_s("mm/dd/yyyy") %>"
      data-end-date="<%= @end_date.to_s("mm/dd/yyyy") %>" />
  </div>
<% end %>
