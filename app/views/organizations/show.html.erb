<%= render(PageComponent.new(subject: @organization, sidebar: true, tabs: true)) do |component| %>
  <% component.with(:header) do %>
    <%= render(Page::HeaderComponent.new(title: @organization.name, sidebar: true, datepicker: true, buttons: [
      generate_organization_report_button(@organization.id),
      layout_button(link: new_organization_path, icon: "fas fa-plus", title: "Add team", admin: true)
    ])) %>
  <% end %>
  <% component.with(:body) do %>
    <%= render(MetabaseComponent.new(src: @iframe_url, title: "#{@organization.name} Metabase dashboard")) %>
  <% end %>
<% end %>
