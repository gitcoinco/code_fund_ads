<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/coupons", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/add_coupon" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Coupons",
    subtitle: "#{pluralize(@pagy.count, "record")} found",
    icon: "fas fa-lightbulb-dollar" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <div class="bg-white p-4">
      <%= render "/coupons/table", coupons: @coupons, pagy: @pagy %>
    </div>
  </div>
</main>