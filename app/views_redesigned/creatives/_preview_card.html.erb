<div class="col-12">
  <div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="mb-0"><%= template %> (<%= theme %>)</h4>
      <div class="position-relative">
        <%= link_to creative_previews_path(creative, template: template, theme: theme),
          class: "btn btn-xs btn-icon btn-subtle-secondary", target: "_blank" do %>
          <i class="fas fa-external-link btn-icon__inner"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="p-2 mb-4 border-bottom">
    <iframe src="<%= creative_previews_path(creative, template: template, theme: theme) %>"
      height="270" style="height: 320px; width: 100%; border: 0; resize: horizontal;"
      frameBorder="0" scrolling="no"></iframe>
  </div>
</div>

